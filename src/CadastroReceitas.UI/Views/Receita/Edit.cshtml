@model Receita

@{
    ViewData["Title"] = "Editar Receita";
}

<h1>@ViewData["Title"]</h1>

<hr />

<form asp-action="Edit" asp-controller="Receita" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="DataInclusao" />

    <div class="form-group">
        <label asp-for="Titulo" class="control-label"></label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>
    <div class="row g-3 align-items-center">
        <div class="row g-2 align-items-center">
            <div class="col-12">
                <label asp-for="Ingredientes" class="form-label">Ingredientes</label>
                <textarea asp-for="Ingredientes" class="form-control" id="txtModeFazer" rows="5"></textarea>
                <span asp-validation-for="Ingredientes" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row g-3 align-items-center">
        <div class="row g-2 align-items-center">
            <div class="col-12">
                <label asp-for="ModoPreparo" class="form-label">Modo de preparo</label>
                <textarea asp-for="ModoPreparo" class="form-control" id="txtModeFazer" rows="5"></textarea>
                <span asp-validation-for="ModoPreparo" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Imagem" class="control-label"></label>
        <input asp-for="Imagem" class="form-control" />
        <span asp-validation-for="Imagem" class="text-danger"></span>
    </div>
    <p></p>
    <div class="form-group text-left">
        <input type="submit" value="Salvar" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-danger">Cancelar</a>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
